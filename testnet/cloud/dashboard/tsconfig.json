{
  "compilerOptions": {
    "module": "es2020",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "include": ["src", "vite.config.ts"]
}
